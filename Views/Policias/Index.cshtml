@model IEnumerable<MultasAdmin.Models.Policia>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Rec</th>
            <th>Nombre</th>
            <th>Placa</th>
            <th>Supervisor</th>
            <th>Activo</th>
            <th>Unidad</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                    <tr>
                        <td>@item.Rec</td>
                        <td>@item.Nombre</td>
                        <td>@item.Placa</td>
                        <td>@item.Supervisor</td>
                        <td>@item.Activo</td>
                        <td>@item.Unidad</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                        </td>
                    </tr>
        }
    </tbody>
</table>
